{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ],
      "~~/*": [
        "*"
      ],
      "@/*": [
        "src/*"
      ],
      "@@/*": [
        "*"
      ]
    },
    "moduleResolution": "node",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "preserve",
    "allowJs": true
  },
  "include": [
    "./src/**/*",
    "./lib/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
